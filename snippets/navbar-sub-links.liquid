{% assign submenu = l.title | handleize %}
{% if linklists[submenu].links.size > 0 %}
<li class="divider"></li>
<li class="{% if l.active %}active{% endif %} dropdown sub-link">{{ l.title }}
  <ul class="dropdown-menu">
    {% for l in linklists[submenu].links %}
    {% include 'navbar-sub-links' %}
    {% endfor %}
  </ul>
</li>
{% else %}
<li class="{% if l.active %}active{% endif %}"><a tabindex="-1" href="{{ l.url }}">{{ l.title }}</a></li>
{% endif %}
