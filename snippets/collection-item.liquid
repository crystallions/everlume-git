<div class="container-item">
  <div class="collection-details">
    <a class="box" href="{{ collection.url }}" title="Browse our {{ collection.title | escape }} collection">
      {% if collection.image %}
      <img class="img-responsive" src="{{ collection.image.src | collection_img_url: 'large' }}" alt="{{ collection.title | escape }}" />
      {% else %}
      <img class="img-responsive" src="{{ collection.products.first.featured_image | product_img_url: 'large' }}" alt="{{ collection.title | escape }}" />
      {% endif %}
    </a>
    <div class="collection-action">
      <a href="{{ collection.url }}">{{'collections.list_collections.view_collections'|t}} <i class="fa fa-angle-right"></i></a>
    </div>
  </div>

  <h4 class="collection-title">
    <a href="{{ collection.url }}">{{ collection.title }}</a>
  </h4>
  <p class="description">{{ collection.description }}</p>

</div>
