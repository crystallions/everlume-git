<div id="footer-content">
 

  <div class="footer-content footer-content-top clearfix">
    {% comment %} Recent Blog {% endcomment %}

    {% comment %} Link List 1 {% endcomment %}

    {% if settings.show_footer_linklist_1 %}
    <div class="footer-link-list col-md-3">
      <div class="group">
        {% assign list = linklists[settings.footer_linklist_1] %}
        <ul class="list-unstyled list-styled">
          {% for link in list.links %}
          <li class="list-unstyled">
            <a href="{{ link.url }}">{{ link.title | escape }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    {% endif %}

