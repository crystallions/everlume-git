 Mailing with Mailchimp {% endcomment %}
  {% if settings.show_mailing_list %}
  <div id="widget-newsletter">
      
      {% if settings.show_mailing_list %}
    <div class="newsletter">
      {%- assign formId = 'ContactFooter' -%}
      {% form 'customer', id: formId, novalidate: 'novalidate' %}
      {%- if form.posted_successfully? -%}
      <span class="news-desc">Thanks for subscribing!</span>
      {%- endif -%}
      <span class="news-desc">Stay in touch with our current offers</span>
      <input type="hidden" name="contact[tags]" value="newsletter">
      
      <div class="group_input">
        <input class="form-control" value="{{ form.email }}" type="email" placeholder="{{'layout.footer.your_email'|t}}" name="contact[email]" id="{{ formId }}-email" />
        <div class="unpadding-top">
          <button class="btn btn-1" type="submit">SUBSCRIBE</button></div>
      </div>
      {% endform %}
    </div>
      {% endif %}          
   
  </div>
  {% endif %}
      
