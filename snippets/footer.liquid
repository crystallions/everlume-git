             <img class="footer-logo" src="{{ footer_logo | append: '.png' | asset_url }}" alt="" />
         </a>
      </div>
      
      <div class="footer-link-list col-md-10 social-col">
         {% comment %} Social media icons {% endcomment %}
        {% if settings.social_icons_show %}
        <div id="widget-social">
          <ul class="list-inline">
            {% if settings.social_icons_dribbble_show %}<li><a target="_blank" href="{{ settings.social_icons_dribbble_link }}" class="btooltip swing"><i class="fa fa-dribbble"></i></a></li>{% endif %}
            {% if settings.social_icons_facebook_show %}<li><a target="_blank" href="{{ settings.social_icons_facebook_link }}" class="btooltip swing fb_social" ><img  src="{{ 'fb_icon.svg' | asset_url }}" alt="" /></a></li>{% endif %}
            {% if settings.social_icons_youtube_show %}<li><a target="_blank" href="{{ settings.social_icons_youtube_link }}" class="btooltip swing"><i class="fa fa-youtube-play"></i></a></li>{% endif %}
            {% if settings.social_icons_instagram_show %}<li><a target="_blank" href="{{ settings.social_icons_instagram_link }}" class="btooltip swing"><i class="fa fa-instagram"></i></a></li>{% endif %}
        	{% if settings.social_icons_linkedin_show %}<li><a target="_blank" href="{{ settings.social_icons_linkedin_link }}" class="btooltip swing"><i class="fa fa-linkedin-square"></i></a></li>{% endif %}
        	{% if settings.social_icons_mail_show %}<li><a target="_blank" href="{{ settings.social_icons_mail_link }}" class="btooltip swing"><i class="fa fa-envelope-o"></i></a></li>{% endif %}
            {% if settings.social_icons_twitter_show %}<li><a target="_blank" href="{{ settings.social_icons_twitter_link }}" class="btooltip swing"><i class="fa fa-twitter"></i></a></li>{% endif %}
            {% if settings.social_icons_vimeo_show %}<li><a target="_blank" href="{{ settings.social_icons_vimeo_link }}" class="btooltip swing"><i class="fa fa-vimeo-square"></i></a></li>{% endif %}
            {% if settings.social_icons_google_show %}<li><a target="_blank" href="{{ settings.social_icons_google_link }}" class="btooltip swing"><i class="fa fa-google-plus"></i></a></li>{% endif %}
            {% if settings.social_icons_pinterest_show %}<li><a target="_blank" href="{{ settings.social_icons_pinterest_link }}" class="btooltip swing"><i class="fa fa-pinterest"></i></a></li>{% endif %}
            {% if settings.social_icons_tumblr_show %}<li><a target="_blank" href="{{ settings.social_icons_tumblr_link }}" class="btooltip swing"><i class="fa fa-tumblr"></i></a></li>{% endif %}
            {% if settings.social_icons_atom_show %}<li><a target="_blank" href="{{ settings.social_icons_atom_link }}" class="btooltip swing"><i class="fa fa-rss"></i></a></li>{% endif %}
            </ul>
        </div>
        {% endif %}
      </div>
    

