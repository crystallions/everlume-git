{% if settings.share_prod_on_twitter or settings.share_prod_on_facebook or settings.share_prod_on_googleplus or settings.share_prod_on_pinterest %}

<div class="sharing clearfix">
  
  <ul class="unmargin unpadding inline">
    
    {% if settings.share_prod_on_facebook %}
    <li class="unpadding">
      <div id="fb-root"></div>
      <div class="fb-like" data-send="false" data-layout="button_count" data-show-faces="false"></div>          
    </li>
    {% endif %}
    
    {% if settings.share_prod_on_twitter %}
    <li class="unpadding">
      <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a>
    </li>
    {% endif %}
    
    {% if settings.share_prod_on_googleplus %}
    <li class="unpadding">
      <div class="g-plusone" data-size="medium" data-annotation="bubble" data-width="90"></div>
    </li>
    {% endif %}
    
    {% if settings.share_prod_on_pinterest %}
    <li class="unpadding">
      <a data-pin-do="buttonPin" data-pin-config="beside" href="http://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&description={{ product.title | strip_html | escape | replace: ' ', '%20' }}&media={{ product.featured_image | product_img_url: 'original' }}" class="pin-it-button" count-layout="horizontal"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>
      <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
    </li>
    {% endif %}
    
  </ul>
  
</div>

<style>
  .fb_iframe_widget iframe { z-index: 4000 }
</style>

<!-- fb like button -->
<script type="text/javascript">(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<!-- +1 button -->
<script type="text/javascript">
  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>

<!-- tweet btn -->
<script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>

{% endif %}