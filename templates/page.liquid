<div class="pagestaic container">
<div class="row">
  <div id="page-header" class="col-md-24">
  <h1 id="page-title">{{ page.title }}</h1>
</div>
  </div>

<div class="row">
{% if settings.show_sidebar_link_list %}
    <div class="sidebar-link-list col-md-6">
      <div class="group">
        {% assign list = linklists[settings.sidebar_linklist] %}
        <ul class="list-unstyled list-styled">
          {% for link in list.links %}
          <li class="list-unstyled">
            <a href="{{ link.url }}">{{ link.title | escape }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    {% endif %}  

<div id="col-main" class="col-md-18 normal-page clearfix">  
  <div class="page {% if page.handle == 'about-us' %}about-us {% endif %} {% if page.handle == 'typography' %}typography {% endif %} " >
  {{ page.content }}  
  </div>
</div>
  </div>
</div>