<div class="brand_page">

 <div class="col_banner brand col_banner_collection">
                   
                <div class="col_banner_info">
                  
                    <div class="col_banner_caption">
                       <h2>{{settings.brand_main_heading}}</h2>
                       <h3>{{settings.brand_heading}}</h3>
                    </div>
                   
                    {% if settings.brand_banner_action %}
                    <div class="col-banner-action">
                      <a href="{{ settings.brand_banner_link }}">{{settings.brand_banner_action}}</a>
                    </div>
                    {% endif %}
                
                   </div>
              </div>
{% comment %} Featured Product {% endcomment %}
  {% if settings.b_featured_section_show %}
  <div class="home-feature brand-feature">
  <div class="container-fluid">
    <div class="group_featured_products row">
      <div class="col-md-24">
        <div class="home_fp">
          <h6 class="general-title">{{ settings.b_featured_section_heading }}</h6>
            
       <div class="desc">
          <p>{{settings.b_featured_section_desc}}</p>
        </div>
      
          <div class="home_fp_wrapper">
            <div id="home_fp">
              {% assign collection = settings.b_featured_section_collection %}
              {% assign number = settings.b_featured_section_number | plus:0 %}
	 {% assign featured_col = collections[settings.b_featured_section_collection] %}
              {% for product in collections[collection].products limit: number %}
              <div class="element no_full_width not-animated" data-animate="fadeInUp" data-delay="{{forloop.index0 | times:200}}">
                {% include 'product-item' %}
              </div>
              {% endfor %}
            </div>
          </div>
          
          <div class="more-action">
            <a href="{{ featured_col.url }}">View all products</a>
          </div>
        </div>

      </div>
    </div>
  </div>
  </div>
  {% endif %}


