/*
** Base CSS
**/
/* begin Headings, body, etc */
html,
html body{
  line-height: 20px;
}
body {
  margin: 0;
  font-family: {{settings.general_font}};
  font-size: 14px;
  line-height: 20px;
  color: {{settings.b_scaffolding_color}};
  background-color: {{settings.b_scaffolding_bg}};
}
a {
  color: {{settings.b_links_colour}};
  font-size: {{settings.b_links_size}};
  font-weight: {{settings.b_links_style}};
  text-decoration: {{settings.b_links_decoration}};
}
a:hover,
a:focus {
  color: {{settings.b_links_colour_hover}};
  font-size: {{settings.b_links_size_hover}};
  font-weight: {{settings.b_links_style_hover}};
  text-decoration: {{settings.b_links_decoration_hover}};
}
.text-error {
  color: {{settings.b_states_alerts_error_txt}};
}
a.text-error:hover,
a.text-error:focus {
  color: {{settings.b_states_alerts_error_bg}};
}
.text-success {
  color: {{settings.b_states_alerts_success_txt}};
}
a.text-success:hover,
a.text-success:focus {
  color: {{settings.b_states_alerts_success_bg}};
}
h1 small,
h2 small,
h3 small,
h4 small,
h5 small,
h6 small {
  color: {{settings.b_scaffolding_color}};
}
blockquote small {
  color: {{settings.b_scaffolding_color}};
}
.label-success,
.badge-success {
  background-color: {{settings.b_states_alerts_success_txt}};
}
.label-success[href],
.badge-success[href] {
  background-color: {{settings.b_states_alerts_success_bg}};
}
/* end Headings, body, etc */

/* begin Tables */
table {
  background-color: {{settings.b_tables_bg}};
}
.table th,
.table td {
  border-top: 1px solid {{settings.b_tables_border}};
}
.table tbody + tbody {
  border-top: 2px solid {{settings.b_tables_border}};
}
.table .table {
  background-color: {{settings.b_tables_bg}};
}
.table-bordered {
  border: 1px solid {{settings.b_tables_border}};
}
.table-bordered th,
.table-bordered td {
  border-left: 1px solid {{settings.b_tables_border}};
}
.table-striped tbody > tr:nth-child(odd) > td,
.table-striped tbody > tr:nth-child(odd) > th {
  background-color: {{settings.b_tables_bg_accent}};
}
.table-hover tbody tr:hover > td,
.table-hover tbody tr:hover > th {
  background-color: {{settings.b_tables_bg_hover}};
}
.table tbody tr.success > td {
  background-color: {{settings.b_states_alerts_success_bg}};
}
.table tbody tr.error > td {
  background-color: {{settings.b_states_alerts_error_bg}};
}
.table tbody tr.warning > td {
  background-color: {{settings.b_states_alerts_warning_bg}};
}
.table tbody tr.info > td {
  background-color: {{settings.b_states_alerts_info_bg}};
}
.table-hover tbody tr.success:hover > td {
  background-color: {{settings.b_states_alerts_success_txt}};
}
.table-hover tbody tr.error:hover > td {
  background-color: {{settings.b_states_alerts_error_txt}};
}
.table-hover tbody tr.warning:hover > td {
  background-color: {{settings.b_states_alerts_warning_txt}};
}
.table-hover tbody tr.info:hover > td {
  background-color: {{settings.b_states_alerts_info_txt}};
}
/* end Tables */

/* begin Forms */
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"],
.uneditable-input {
  background-color: {{settings.b_forms_input_bg}};
  border: 1px solid {{settings.b_forms_input_border}};
}
select {
  border: 1px solid {{settings.b_forms_input_border}};
  background-color: {{settings.b_forms_input_bg}};
}
input:-moz-placeholder,
textarea:-moz-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
input:-ms-input-placeholder,
textarea:-ms-input-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
.control-group.error .control-label,
.control-group.error .help-block,
.control-group.error .help-inline {
  color: {{settings.b_states_alerts_error_txt}};
}
.control-group.error .checkbox,
.control-group.error .radio,
.control-group.error input,
.control-group.error select,
.control-group.error textarea {
  color: {{settings.b_states_alerts_error_txt}};
}
.control-group.error input,
.control-group.error select,
.control-group.error textarea {
  border-color: {{settings.b_states_alerts_error_txt}};
}
.control-group.error input:focus,
.control-group.error select:focus,
.control-group.error textarea:focus {
  border-color: {{settings.b_states_alerts_error_bg}};
}
.control-group.error .input-prepend .add-on,
.control-group.error .input-append .add-on {
  color: {{settings.b_states_alerts_error_txt}};
  background-color: {{settings.b_states_alerts_error_bg}};
  border-color: {{settings.b_states_alerts_error_txt}};
}
.control-group.success .control-label,
.control-group.success .help-block,
.control-group.success .help-inline {
  color: {{settings.b_states_alerts_success_txt}};
}
.control-group.success .checkbox,
.control-group.success .radio,
.control-group.success input,
.control-group.success select,
.control-group.success textarea {
  color: {{settings.b_states_alerts_success_txt}};
}
.control-group.success input,
.control-group.success select,
.control-group.success textarea {
  border-color: {{settings.b_states_alerts_success_txt}};
}
.control-group.success input:focus,
.control-group.success select:focus,
.control-group.success textarea:focus {
  border-color: {{settings.b_states_alerts_success_bg}};
}
.control-group.success .input-prepend .add-on,
.control-group.success .input-append .add-on {
  color: {{settings.b_states_alerts_success_txt}};
  background-color: {{settings.b_states_alerts_success_bg}};
  border-color: {{settings.b_states_alerts_success_txt}};
}
/* end Forms */
/*
** end Base CSS
**/


