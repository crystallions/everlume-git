/* general body settings */
body { 
  padding: 0px;
  margin: 0px;
  direction: ltr;
}
/* overides metro scrolbars in IE10 and makes them look like a default scrollbar */
@-ms-viewport{ 
  width: auto !important; 
}
h1, h2, h3, h4, h5, h6 {
  font-weight: 300;
}
button, input, select, textarea{
  font: {{settings.general_font_size}} {{settings.general_font}};
}
/***
Fix link outlines after click
***/
a,a:focus, a:hover, a:active {
  outline: 0;
  text-decoration: none;
}
div, input, select, textarea, span, img, table, td, th, p, a, button, ul, li {
  -webkit-border-radius: 0 !important;
  -moz-border-radius: 0 !important;
  border-radius: 0 !important;
}
label{
  cursor: default;
}
ol li{
  padding: 5px 0;
}
dl dd{
  margin-bottom: 20px;
  margin-left: 0;
}

#buttons input, 
#cancel-purchase a{
  -webkit-transition: all 0.2s ease-out;
  -moz-transition: all 0.2s ease-out;
  -o-transition: all 0.2s ease-out;
  -ms-transition: all 0.2s ease-out;
  transition: all 0.2s ease-out;
}
#cancel-purchase{
  font-size: 100%;
}
#buttons input, 
#cancel-purchase a{
  display: inline-block;
  margin-bottom: 0;
  font-weight: normal;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  padding: 6px 12px;
  line-height: normal;
  border-radius: 4px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
  user-select: none;
  
  filter: none;
  cursor: pointer;
  outline: none;
  border-radius: 0;
  margin-bottom: 3px;
  
  font-family: {{settings.header_font}};
  padding-left: 18px;
  padding-right: 18px;
  font-weight: bold;
  text-transform: uppercase;
}

#cancel-purchase a{
  background: {{settings.btn_btn1_bg}};
  color: {{settings.btn_btn1_txt}};
  border: 2px solid {{settings.btn_btn1_border}};
  font-size: 13px;
  padding-top: 8px;
  padding-bottom: 8px;
}
#cancel-purchase a:hover,
#cancel-purchase a:focus,
#cancel-purchase a:active{
  background: {{settings.btn_btn1_bg_hover}};
  color: {{settings.btn_btn1_txt_hover}};
  border-color: {{settings.btn_btn1_border_hover}};  
  outline: none;
}
#create-account input[type="submit"],
button#create-account-btn,
#buttons input{
  background: {{settings.btn_btn_bg}};
  color: {{settings.btn_btn_txt}};
  border: 2px solid {{settings.btn_btn_border}};  
  padding-left: 18px;
  padding-right: 18px;
  padding-top: 8px;
  padding-bottom: 8px;
}
#create-account input[type="submit"]:hover,
button#create-account-btn:hover,
#buttons input:hover,
#buttons input:focus,
#buttons input:active{
  background: {{settings.btn_btn_bg_hover}};
  color: {{settings.btn_btn_txt_hover}};
  border-color: {{settings.btn_btn_border_hover}};  
  outline: none;
  cursor: pointer;
}


