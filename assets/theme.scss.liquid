.filter-outer {
  position: relative;
}

.filter-column {
  @media (min-width: 769px) {
    position: relative;
  }
  .filter-select {
    position: absolute;
    background: white;
    z-index: 999;
    margin-top: 10px;
    border: 1px solid #e0e0e0;
    width: calc(100vw - 20px);
    left: 5px;
    padding: 10px;
    box-shadow: 1px 6px 23px -6px rgba(0, 0, 0, 0.75);
    opacity: 0;
    transition: 300ms all;
    display: none;

    &.active {
      display: block;
      opacity: 1;
    }
    .filter-list-box {
      max-height: 250px;
      overflow-y: auto;
    }
    @media (min-width: 769px) {
      width: 100%;
      right: 5px;
    }

    label {
      display: block;
      position: relative;
      padding-left: 38px;
      margin-bottom: 14px;
      cursor: pointer;
      font-size: 14px;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      text-align: left;
      color: black;
      font-weight: 500;

      input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
        &:checked ~ .checkmark:after {
          display: block;
        }
      }
      .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 25px;
        width: 25px;
        border: 1px solid #e0e0e0;
        border-radius: 3px;

        &:after {
          left: 8px;
          top: 3px;
          width: 9px;
          height: 14px;
          border: solid #56c8e4;
          border-width: 0 4px 4px 0;
          -webkit-transform: rotate(45deg);
          -ms-transform: rotate(45deg);
          transform: rotate(45deg);
          content: "";
          position: absolute;
          display: none;
        }
      }
    }
    button {
      text-transform: uppercase;
      position: relative;
      width: 100%;
      display: block;
      padding: 8px 16px;
      margin: 0;
      font-weight: 400;
      font-style: normal;
      text-decoration: none;
      text-align: center;
      white-space: nowrap;
      cursor: pointer;
      border: 1px solid transparent;
      color: #fff;
      background-color: #56c8e4 !important;
      font-size: 14px !important;
      line-height: 24px !important;
      font-family: "VisbyCFBold" !important;
      height: 0px !important;
      margin-top: 0px !important;
      letter-spacing: 3px;
      padding-top: 0px !important;
      visibility:hidden;
    }
  }
  .backdrop {
    display: none;
    position: fixed;
    z-index: 998;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    &.active {
      display: block;
    }
  }
}
