/*
** Base CSS
**/
/* begin Headings, body, etc */
html, body, p{
  line-height: 1.5em;
}
body {
  margin: 0;
  font-family: {{settings.general_font}};
  font-size: {{settings.general_font_size}};
  color: {{settings.b_scaffolding_color}};
  background-color: {{settings.b_scaffolding_bg}};
}
a {  
  text-decoration: {{settings.b_links_decoration}};
}
a:hover,
a:focus {
  color: {{settings.b_links_colour_hover}};
  text-decoration: {{settings.b_links_decoration_hover}};
}
h1 small,
h2 small,
h3 small,
h4 small,
h5 small,
h6 small,
.h1 small,
.h2 small,
.h3 small,
.h4 small,
.h5 small,
.h6 small,
h1 .small,
h2 .small,
h3 .small,
h4 .small,
h5 .small,
h6 .small,
.h1 .small,
.h2 .small,
.h3 .small,
.h4 .small,
.h5 .small,
.h6 .small{
  color: {{settings.b_scaffolding_color}};
}
h1,
.h1 {
  font-size: {{settings.b_h1_size}};
  color: {{settings.b_h1_colour}};
  font-weight: {{settings.b_h1_weight}};
}
h2,
.h2 {
  font-size: {{settings.b_h2_size}};
  color: {{settings.b_h2_colour}};
  font-weight: {{settings.b_h2_weight}};
}
h3,
.h3 {
  font-size: {{settings.b_h3_size}};
  color: {{settings.b_h3_colour}};
  font-weight: {{settings.b_h3_weight}};
}
h4,
.h4 {
  font-size: {{settings.b_h4_size}};
  color: {{settings.b_h4_colour}};
  font-weight: {{settings.b_h4_weight}};
}
h5,
.h5 {
  font-size: {{settings.b_h5_size}};
  color: {{settings.b_h5_colour}};
  font-weight: {{settings.b_h5_weight}};
}
h6,
.h6 {
  font-size: {{settings.b_h6_size}};
  color: {{settings.b_h6_colour}};
  font-weight: {{settings.b_h6_weight}};
}
blockquote small {
  color: {{settings.b_scaffolding_color}};
}
.alert{
  border-radius: 0;
}
.alert-success {
  background-color: {{settings.b_states_alerts_success_bg}};
  border-color: {{settings.b_states_alerts_success_bg}};
  color: {{settings.b_states_alerts_success_txt}};
}
.alert-danger{
  background-color: {{settings.b_states_alerts_error_bg}};
  border-color: {{settings.b_states_alerts_error_bg}};
  color: {{settings.b_states_alerts_error_txt}};
}
/* end Headings, body, etc */

/* begin Tables */
.table > thead > tr > th,
.table > tbody > tr > th,
.table > tfoot > tr > th,
.table > thead > tr > td,
.table > tbody > tr > td,
.table > tfoot > tr > td {
  border-top-color: {{settings.b_tables_border}};
}
.table > thead > tr > th {
  border-bottom-color: {{settings.b_tables_border}};
}
table thead th,
table thead td{
  background-color: {{settings.b_tables_bg_accent}};
  color: {{settings.b_tables_head_colour}};
}
.table > tbody + tbody {
  border-top-color: {{settings.b_tables_border}};
}
.table .table {
  background-color: {{settings.b_tables_bg}};
}
.table-bordered {
  border-color: {{settings.b_tables_border}};
}
.table-bordered > thead > tr > th,
.table-bordered > tbody > tr > th,
.table-bordered > tfoot > tr > th,
.table-bordered > thead > tr > td,
.table-bordered > tbody > tr > td,
.table-bordered > tfoot > tr > td {
  border-color: {{settings.b_tables_border}};
}
.table-striped > tbody > tr:nth-child(odd) > td,
.table-striped > tbody > tr:nth-child(odd) > th {
  background-color: {{settings.b_tables_bg_accent}};
}
.table-hover > tbody > tr:hover > td,
.table-hover > tbody > tr:hover > th {
  background-color: {{settings.b_tables_bg_hover}};
}
/* end Tables */

/* begin Forms */
.form-control {
  display: block;
  width: 100%;
  height: 40px;
  padding: 6px 12px;
  font-size: {{settings.general_font_size}};
  line-height: 1.428571429;
  color: {{settings.b_scaffolding_color}};
  vertical-align: middle;
  background-color: {{settings.b_forms_input_bg}};
  background-image: none;
  border: 1px solid {{settings.b_forms_input_border}};
  border-radius: 0;
  -webkit-box-shadow: none;
  box-shadow: none;
  -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  margin-bottom: 3px;
}
.form-control:focus {
  border-color: {{settings.b_forms_input_border_accent}};
  outline: 0;
  -webkit-box-shadow: none;
  box-shadow: none;
}
.form-control:-moz-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
.form-control::-moz-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
.form-control:-ms-input-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
.form-control::-webkit-input-placeholder {
  color: {{settings.b_forms_phd_txt}};
}
.form-control[disabled],
.form-control[readonly],
fieldset[disabled] .form-control {
  cursor: not-allowed;
  background-color: {{settings.b_forms_input_disabled_bg}};
}
.has-error .help-block,
.has-error .control-label,
.has-error .radio,
.has-error .checkbox,
.has-error .radio-inline,
.has-error .checkbox-inline {
  color: {{settings.b_states_alerts_error_bg}};
}
.has-error .form-control {
  border-color: {{settings.b_states_alerts_error_bg}};
  -webkit-box-shadow: none;
  box-shadow: none;
}
.has-error .form-control:focus {
  border-color: {{settings.b_states_alerts_error_bg}};
  -webkit-box-shadow: none;
  box-shadow: none;
}
.has-success .help-block,
.has-success .control-label,
.has-success .radio,
.has-success .checkbox,
.has-success .radio-inline,
.has-success .checkbox-inline {
  color: {{settings.b_states_alerts_success_txt}};
}
.has-success .form-control {
  border-color: {{settings.b_states_alerts_success_bg}};
  -webkit-box-shadow: none;
  box-shadow: none;
}
.has-success .form-control:focus {
  border-color: {{settings.b_states_alerts_success_bg}};
  -webkit-box-shadow: none;
  box-shadow: none;
}
/* end Forms */
/*
** end Base CSS
**/

/*
** begin Plugins
**/
/* begin Tooltips*/
.tooltip-inner {
  max-width: 200px;
  padding: 6px;
  color: {{settings.b_tooltip_colour}};
  text-align: center;
  text-decoration: none;
  background-color: {{settings.b_tooltip_bg}};
  font-size: {{settings.b_tooltip_font_size}};
  border-radius: 0;
}
.tooltip.top .tooltip-arrow {
  border-top-color: {{settings.b_tooltip_bg}};
}
.tooltip.top-left .tooltip-arrow {
  border-top-color: {{settings.b_tooltip_bg}};
}
.tooltip.top-right .tooltip-arrow {
  border-top-color: {{settings.b_tooltip_bg}};
}
.tooltip.right .tooltip-arrow {
  border-right-color: {{settings.b_tooltip_bg}};
}
.tooltip.left .tooltip-arrow {
  border-left-color: {{settings.b_tooltip_bg}};
}
.tooltip.bottom .tooltip-arrow {
  border-bottom-color: {{settings.b_tooltip_bg}};
}
.tooltip.bottom-left .tooltip-arrow {
  border-bottom-color: {{settings.b_tooltip_bg}};
}
.tooltip.bottom-right .tooltip-arrow {
  border-bottom-color: {{settings.b_tooltip_bg}};
}

/* end Tooltips*/
/* begin Dropdown */
.dropdown-menu {
  background-color: {{settings.b_scaffolding_bg}};
  border: 1px solid {{settings.b_tables_border}};
  color: {{settings.b_scaffolding_color}};
}
.dropdown-menu:before{
  content: '';
  display: inline-block;
  border-left: 7px solid transparent;
  border-right: 7px solid transparent;
  border-bottom: 7px solid {{settings.b_tables_border}};
  position: absolute;
  top: -7px;
  left: 9px;
}
.dropdown-menu:after{
  content: '';
  display: inline-block;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-bottom: 6px solid {{settings.b_scaffolding_bg}};
  position: absolute;
  top: -6px;
  left: 10px;
}
.dropdown, 
.dropdown-toggle{
  position: relative;
}
.dropdown .sub-dropdown,
.dropdown-toggle .sub-dropdown,
.dropdown .sub-dropdown1,
.dropdown-toggle .sub-dropdown1{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.dropdown .sub-dropdown,
.dropdown-toggle .sub-dropdown{
  padding-bottom: 20px;
  z-index: 1;
  cursor: default;
  -webkit-box-sizing: content-box;
  -moz-box-sizing: content-box;
  box-sizing: content-box;
}
.dropdown .sub-dropdown1,
.dropdown-toggle .sub-dropdown1{
  z-index: 2;
  cursor: pointer;
}
.open>.dropdown-menu{
  display: block!important;
}
/* end Dropdown */
/*
** end Plugins
**/